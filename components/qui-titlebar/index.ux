<template>
  <div class="qui-titlebar-box">
    <div class="titlebar" show="{{replaceShow}}">
      <richtext if="richContent" class="rich-content" type="ux">{{richContent}}</richtext>
      <div else class="titlebar-content" style="background-color:{{backgroundColor}};opacity:{{backgroundOpacity}}">
        <div class="bar" @click="leftAction">
          <image if='!leftText&&leftIcon' class="left-image" src="{{leftIcon}} " />
          <text elif="leftText " class="left-text " style="color:{{textColor}} ">
            {{leftText}}
          </text>
        </div>
        <text class="title " style="color:{{textColor}};text-align:{{titleAlign}} ">{{title}}</text>
        <div class="bar " @click="rightAction">
          <image if="rightIcon" class="right-image " src="{{rightIcon}} " />
          <text elif="rightText" class="right-text " style="color:{{textColor}} ">
            {{rightText}}
          </text>
        </div>
      </div>
    </div>
  </div>
</template>

<style>
  .qui-titlebar-box {
    flex: 1;
  }

  .titlebar {
    height: 144px;
    width: 1080px;
  }

  .rich-content {
    flex: 1;
  }

  .titlebar-content {
    flex: 1;
    justify-content: space-between;
  }

  .bar {
    width: 132px;
    padding: 0 36px;
    align-items: center;
  }

  .title {
    flex: 1;
    font-size: 48px;
    font-weight: bold;
  }

  .left-image {
    width: 48px;
    height: 72px;
  }

  .right-image {
    margin-right: 12px;
    width: 72px;
    height: 72px;
  }

  .left-text,
  .right-text {
    font-size: 30px;
  }
</style>

<script>
  import router from '@system.router'

  export default {
    props: {
      richContent: String,
      title: {
        type: String,
        default: "标题 "
      },
      titleAlign: {
        type: String,
        default: "center "
      },
      textColor: {
        type: String,
        default: "#333333 "
      },
      backgroundColor: {
        type: String,
        default: '#ffffff'
      },
      backgroundOpacity: {
        type: String,
        default: '1'
      },
      leftIcon: {
        type: String,
        default: 'data:image/webp;base64,'
      },
      leftText: String,
      rightIcon: String,
      rightText: String,
      defaultReturn: {
        type: String,
        default: '1'
      },
      visible: {
        type: String,
        default: '1'
      }
    },
    data() {
      return {
        replaceDefaultReturn: true,
        replaceShow: true
      }
    },
    onInit() {
      this.initialize()
    },
    initialize() {
      if (this.defaultReturn !== "1") {
        this.replaceDefaultReturn = false
      }
      if (this.visible !== "1") {
        this.replaceShow = false
      }
    },
    leftAction() {
      if (this.leftText || this.leftIcon) {
        if (this.replaceDefaultReturn) {
          router.back()
        }
        this.$emit('quiLeftclicked')
      }
    },
    rightAction() {
      if (this.rightText || this.rightIcon) {
        this.$emit('quiRightclicked')
      }
    }
  }
</script>