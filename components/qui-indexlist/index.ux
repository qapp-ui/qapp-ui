  }

  .qui-indexlist-group-tag {
    border-bottom-width: 0;
  }

  .qui-indexlist-item {
    padding: 33px;
    align-items: center;
    border-color: #e0e0e0;
    border-bottom-width: 2px;
    background-color: #ffffff;
  }

  .qui-indexlist-group-item {
    padding: 0 33px;
