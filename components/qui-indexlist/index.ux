<script>
  /**
   * list: [{
   *   name: 'xxx',  //名称
   *   desc: 'xxx',   //描述文本
   *   key: 'xxx',   //排序字段
   *   hot: true/false  //是否是热门
   * }],
   * hotTitle: '热门',  //热门标签名
   * hotType: 'group', //热门选项类型
   * showIndex: '1'/'0',  //显示侧边索引栏
   * onlyShowList: '1'/'0'   //是否只显示列表，不现实热门、定位
   */
  export default {
    props: {
      list: {
        type: Array,
        required: true,
        default: []
      },
      hotTitle: {
        type: String,
        default: '热门'
      },
      hotType: {
        type: String,
        default: 'list'
      },
      showIndex: {
        type: String,
        default: '1'
      },
      onlyShowList: {
        type: String,
        default: '0'
      }
    },
    data() {
      return {
        index: [],
        hot: [],
        indexList: [],
        icon: 'data:image/webp;base64,'
      }
    },
    onInit() {
      //list必须放在最后，否则updateList会被调用多次
      ['hotTitle', 'onlyShowList', 'list'].forEach(key => {
        if (key === 'list') {
          this.$watch(`${key}`, 'updateList')
          this.updateList()
        } else {
          this.$watch(`${key}`, 'update')
          this.update()
        }
      })
    },
    updateList() {
      //深拷贝数组
      this.indexList = JSON.parse(JSON.stringify(this.list))
      //排序
      this.sortList()
      //重置索引列表，hot和location
      this.update()
    },
    sortList() {
      this.indexList.sort(function (a, b) {
        if (a.key < b.key) {
          return -1
        } else if (a.key > b.key) {
          return 1
        }

        return 0
      })
    },
    update() {
      this.index = []
      this.hot = []
      this.indexList.forEach(item => {
        //添加索引
        if (!this.index.length || this.index[this.index.length - 1] !== item.key[0]) {
          this.index.push(item.key[0])
          item.tag = item.key[0]
        }
        //添加hot
        item.hot && this.onlyShowList === '0' && this.hot.push(item)
      })
      this.hot.length && this.index.unshift(this.hotTitle)
    },
    scrollTo(n) {
      let k = -1, to = 0, hot
      //热门所占用的item数目
      hot = this.hot.length ? (this.hotType === 'group' ? 2 : this.hot.length + 1) : 0

      if (hot && !n) {    //热门
      } else {  //常规索引
        hot && n--
        this.indexList.some(function (item, index) {
          if (item.tag) {
            k++
            if (k === n) {
              to += index + n + hot
              return true
            }
          }
        })
      }

      this.$element('qui-indexlist').scrollTo({
        index: to
      })
    },
    click(item, type) {
      this.$emit('quiClick', {
        type,
        item
      })
    }
  }
</script>